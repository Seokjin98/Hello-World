public class Rickrolled {
  public static void main(String[] args) {
    intro();
    verseone();
    versetwo();
    versethree();
    versefour();
    versetwo();
    versetwo();
    versethree();
    verseone();
    versetwo();
  }

  public static void intro() {
    System.out.println("  Never Gonna Give You Up");
    System.out.println("      By Rick Astley");
    System.out.println();
    System.out.println("We're no strangers to love");
    System.out.println("You know the rules and so do I");
    System.out.println("A full commitment's what I'm thinking of");
    System.out.println("You wouldn't get this from any other guy");
    System.out.println();
  }

  public static void verseone() {
    System.out.println("I just want to tell you how I'm feeling");
    System.out.println("Gotta make you understand");
    System.out.println();
  }

  public static void versetwo() {
    System.out.println("Never gonna give you up, never gonna let you down");
    System.out.println("Never gonna run around and desert you");
    System.out.println("Never gonna make you cry, never gonna say goodbye");
    System.out.println("Never gonna tell a lie and hurt you");
    System.out.println();
  }

  public static void versethree() {
    System.out.println("We've known each other for so long");
    System.out.println("Your heart's been aching but you're too shy to say it");
    System.out.println("Inside we both know what's been going on");
    System.out.println("We know the game and we're gonna play it");
    System.out.println();
  }

  public static void versefour() {
    System.out.println("And if you ask me how I'm feeling");
    System.out.println("Don't tell me you're too blind to see");
    System.out.println();
  }
}
